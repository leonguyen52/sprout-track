'use client';

import { useEffect } from 'react';
import { useRouter } from 'next/navigation';

interface HomePageClientProps {
  families: { slug: string }[];
}

export default function HomePageClient({ families }: HomePageClientProps) {
  const router = useRouter();

  useEffect(() => {
    console.log('HomePageClient - families count:', families.length, 'families:', families);

    // Prefer explicit checks on count
    if (families.length > 1) {
      router.push('/family-select');
    } else if (families.length === 1) {
      router.push(`/${families[0].slug}/login`);
    } else {
      // No families found - redirect to login
      router.push('/login');
    }
  }, [families, router]);

  // Show loading while redirecting
  return (
    <div className="flex items-center justify-center h-screen">
      <div className="text-center">
        <div className="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600 mx-auto mb-4"></div>
        <p>Loading...</p>
      </div>
    </div>
  );
}
